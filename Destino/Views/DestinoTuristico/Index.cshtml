@model List<Destino.Models.DestinoTuristico>

<h2>Destinos Turísticos</h2>

<hr />

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Foto</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var destino in Model)
            {
                <tr>
                    <td><img src="@Url.Content("~/Content/Images/" + destino.Id + ".jpg")" alt="@destino.Nombre" style="max-width: 100px; max-height: 100px;"></td>
                    <td>@destino.Nombre</td>
                    <td>@destino.Descripcion</td>
                    <td>@destino.Precio</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No se encontraron destinos turísticos.</p>
}
